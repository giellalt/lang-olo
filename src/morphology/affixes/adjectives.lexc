LEXICON A_VALGEI-PL
+A: NMN_VALGEI-PL        ;

LEXICON A_OSTAI
+A:%>j NMN_OSTAI ;

LEXICON A_PEZII
+A:%>j NMN_PEZII ;

!! !THREE-SYLLABLE VOWEL-FINAL STEMS
LEXICON A_PAREMBI !!= @CODE@ parembi:paremb
+A: NMN_PAREMBI	  ;
+A+Der/MWN: N_PAREMBI ;
+N:%{aä%} Adj-NB-i ; !2012-09-27 unknown -loi vs -i

LEXICON A_JIÄTÖI !!= @CODE@ jiätöi:jiät
