LEXICON A_KIELINE !!= @CODE@ kieline:kieli
+A: NMN_KIELINE ;

LEXICON A_TOINE !!= @CODE@ toine:to
+A: NMN_TOINE ;

!! !THREE-SYLLABLE STEMS WITH TWO-SYLLABLE NOMINATIVE SINGULAR
LEXICON A_KARJAL !!= @CODE@ karjal:karjal
        A_KARJAL-SG ;
        A_KARJAL-PL ;
LEXICON A_KARJAL-SG !!= @CODE@ karjal:karjal
