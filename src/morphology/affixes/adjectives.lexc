LEXICON A_NIMI !!= @CODE@ nimi:nim
+A:        NMN_NIMI  ;


!! !TWO-SYLLABLE WORD WITH CONSONANT-FINAL STEM
LEXICON A_ENIN !!= @CODE@ enin:eni
+A: NMN_ENIN-SG ;
+A: NMN_ENIN-PL ;

LEXICON Adj-NB-i
! These cases are symmetrically marked for number
+Sg: Adj-NB-01 ;
+Pl:%>i Adj-NB-01 ;
! The next two share the same stem vowel
+Sg: SGGENSUF ; ! The singular comitative is declined here
+Pl: PLNOMSUF ;

LEXICON Adj-NB-loi
! These cases are symmetrically marked for number
+Sg: Adj-NB-01 ;
+Pl:%>loi Adj-NB-01 ;
! The next two share the same stem vowel
+Sg: SGGENSUF ; ! The singular comitative is declined here
+Pl: PLNOMSUF ;

LEXICON Adj-NB-01
